@model IEnumerable<JobPortal.Data.Models.Datamodel.Profile>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div class="container">

    <div class="row">


        <div class="col-md-6">
            <a href="@Url.Action("Create", "Profile")" class="btn btn-primary"> Create</a>
        </div>


    </div>
    <table class="table table-bordered">
        <thead>

            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email </th>
                <th>Mobile</th>
                <th> Action</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Email </td>
                    <td>@item.Mobile</td>
                    <td> <a href="@Url.Action("Edit", "Profile", new { Id = item.Id})"> Edit </a></td>
                </tr>
            }
        </tbody>

    </table>


</div>